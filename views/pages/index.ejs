  <body>

  <!-- Start header section --> 
  <header id="header">
    <div class="header-inner">
      <!-- Header image -->
      <img src="public/app-landy/images/header-bg.jpg" alt="img">
      <div class="overlay">
        <div class="header-content">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <div class="header-top">
                  <!-- Start logo area -->
                  <div class="logo-area">
                    <!-- Image based logo -->
                    <a class="logo"><img src="public/app-landy/images/gw-logo.svg" alt="logo" width="100"></a>
                    <!-- Text based logo -->
                    <!-- <a class="logo" href="index.html">App Landy.</a> -->
                  </div>
                  <!-- End logo area -->                 
                </div>
              </div>
              <div class="col-md-12">
                <div class="header-bottom">
                <div class="row">
                  <div class="col-md-6 col-sm-6">
                    <div class="header-bottom-left">
                      <h1>Massive Multiplayer Matches</h1>
                      <p>Involve yourself in some of the largest multiplayer matches in gaming history with Game Watch</p>
                      <a class="download-btn" href="#features">Learn More</a>
                    </div>
                  </div>
                  <div class="col-md-6 col-sm-6">
                    <div class="header-bottom-right">
                      <!-- <img src="public/app-landy/images/iphone-group1.png" alt="iphone grpup img"> -->
                      <img src="public/app-landy/images/gw-app-prev.png" alt="iphone grpup img" width="300">
                    </div>
                  </div>
                </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>      
    </div>
  </header>
  <!-- End header section --> 

  <!-- Start Features -->
  <section id="features">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="title-area">
            <h2 class="title">What is Game Watch?</h2>
            <p>Game Watch is a service to help ordinary players from across the world come together to play huge matches over and over again in your favourite games</p>
          </div>
        </div>
        <div class="col-md-12">
          <div class="features-area">
            <div class="row">
              <!-- Start features left -->
              <div class="col-md-4">
                <div class="features-left">
                  <ul class="features-list features-list-left">
                    <li class="wow fadeInLeft" data-wow-duration="0.5s" data-wow-delay="0.5s">
                      <i class="fa fa-edit"></i>
                      <div class="features-content">
                        <h4>Create</h4>
                        <p>Create matches and share them with the community</p>
                      </div>
                    </li>
                    <li class="wow fadeInLeft" data-wow-duration="0.75s" data-wow-delay="0.75s">
                      <i class="fa fa-bell"></i>
                      <div class="features-content">
                        <h4>Get Notified</h4>
                        <p>Recieve notifications for upcoming events by your favourite hosts</p>
                      </div>
                    </li>
                    <li class="wow fadeInLeft" data-wow-duration="0.75s" data-wow-delay="1s">
                      <i class="fa fa-play"></i>
                      <div class="features-content">
                        <h4>Increase Viewership</h4>
                        <p>Create events to stream and expand your viewer count</p>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
              <!-- End features left -->
              <!-- Start features img -->
              <div class="col-md-4">
                <div class="feature-img wow fadeInUp">
                  <img src="public/app-landy/images/gw-app-prev.png" alt="iPhone mockup">
                </div>
              </div>
              <!-- End features img -->
              <!-- Start features right -->
              <div class="col-md-4">
                <div class="features-right">
                  <ul class="features-list features-list-right">
                    <li class="wow fadeInRight" data-wow-duration="0.5s" data-wow-delay="0.5s">
                      <i class="fa fa-list"></i>
                      <div class="features-content">
                        <h4>Find</h4>
                        <p>Scroll through an index of upcoming matches tailored to you</p>
                      </div>
                    </li>
                    <li class="wow fadeInRight" data-wow-duration="0.75s" data-wow-delay="0.75s">
                      <i class="fa fa-thumbs-up"></i>
                      <div class="features-content">
                        <h4>Vote</h4>
                        <p>Vote up the best matches and give hosts reputation</p>
                      </div>
                    </li>
                    <li class="wow fadeInRight" data-wow-duration="0.75s" data-wow-delay="1s">
                      <i class="fa fa-connectdevelop"></i>
                      <div class="features-content">
                        <h4>Community</h4>
                        <p>Use GW to notify teammates of upcoming practices, compeitions and tournaments</p>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>   
              <!-- End features right -->                 
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End Features -->
  
  <!-- Start subscribe -->
  <section id="subscribe">
    <div class="download-overlay">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="title-area wow fadeInUp">
              <h2 class="title">Subscribe To Our Newsletter</h2>
              <p>Get information on the progress of Game Watch and be one of the first to try the service when it launches</p>
            </div>
          </div>
          <!-- Start download app content -->
          <div class="col-md-12">
            <div class="subscribe-content wow fadeInLeft">
              <form action="/email-subscribe" method="post" class="subcr-form">
                <i class="fa fa-envelope-o"></i>
                <input type="text" name="email" id="" placeholder="Type your mail address..">
                <button type="submit" class="subcr-btn">Subscribe</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End download app -->
  
  <!-- Start testimonial -->
  <section id="testimonial">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="title-area wow fadeInLeft">
            <h2 class="title"><span>Get in Touch</span></h2>
            <p style="color: #1F1F1F">Want to talk to us? If you want to offer feeback, get more information or even express your excitement feel free to join our <a href="https://discord.gg/Xw9DknJ" target="_blank" style="color:blue">discord server</a></p>
          </div>
        </div>
      </div>
    </div>      
  </section>
  <!-- End testimonial -->

